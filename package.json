{
  "name": "user-api",
  "version": "1.0.0",
  "description": "Small in-memory HTTP + WebSocket example server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit",
    "pretest:unit": "node -e \"require('fs').mkdirSync('reports/junit', { recursive: true })\"",
    "test:unit": "node --test --test-reporter spec --test-reporter-destination stdout --test-reporter node-test-junit-reporter --test-reporter-destination reports/junit/unit-results.xml \"test/unit/**/*.test.js\"",
    "pretest:integration": "node -e \"const fs=require('fs'); ['reports/junit','reports/html','coverage'].forEach(p=>fs.mkdirSync(p,{recursive:true}))\"",
    "test:integration": "jest --runInBand test/api test/ws --coverage",
    "pretest:api": "node -e \"const fs=require('fs'); ['reports/junit','reports/html','coverage'].forEach(p=>fs.mkdirSync(p,{recursive:true}))\"",
    "test:api": "jest --runInBand test/api",
    "pretest:ws": "node -e \"const fs=require('fs'); ['reports/junit','reports/html','coverage'].forEach(p=>fs.mkdirSync(p,{recursive:true}))\"",
    "test:ws": "jest --runInBand test/ws",
    "test:api:watch": "jest --watchAll test/api",
    "test:ws:watch": "jest --watchAll test/ws",
    "test:api:coverage": "jest --runInBand test/api --coverage",
    "test:ws:coverage": "jest --runInBand test/ws --coverage",
    "test:all": "npm run test:unit && npm run test:api && npm run test:ws",
    "test:all:coverage": "npm run test:unit && jest --runInBand test/api test/ws --coverage"
  },
  "keywords": [
    "api",
    "websocket",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^5.2.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "jest": "^30.0.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "node-test-junit-reporter": "^2.0.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<owner>/user-api.git"
  },
  "bugs": {
    "url": "https://github.com/<owner>/user-api/issues"
  },
  "homepage": "https://github.com/<owner>/user-api#readme"
}
