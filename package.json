{
  "name": "user-api",
  "version": "1.0.0",
  "description": "Small in-memory HTTP + WebSocket example server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit",
    "test:unit": "node --test \"test/unit/**/*.test.js\"",
    "test:api": "jest --runInBand test/api",
    "test:ws": "jest --runInBand test/ws",
    "test:api:watch": "jest --watchAll test/api",
    "test:ws:watch": "jest --watchAll test/ws",
    "test:api:coverage": "jest --coverage test/api",
    "test:ws:coverage": "jest --coverage test/ws",
    "test:all": "npm run test:unit && npm run test:api && npm run test:ws"
  },
  "keywords": ["api", "websocket", "express"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^5.2.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "jest": "^30.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<owner>/user-api.git"
  },
  "bugs": {
    "url": "https://github.com/<owner>/user-api/issues"
  },
  "homepage": "https://github.com/<owner>/user-api#readme"
}
